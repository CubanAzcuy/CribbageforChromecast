<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/accent">
    <item>
        <layer-list>
            <item>
                <shape  android:shape="rectangle" >
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item android:top="0dp" android:bottom="90dp" android:left="0dp" android:right="0dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#40c4ff" />
                    <size android:height="50dp" android:width="50dp" />
                </shape>
            </item>
            <item android:top="50dp" android:bottom="0dp" android:left="0dp" android:right="5dp">
                <rotate
                    android:fromDegrees="95"
                    android:toDegrees="45"
                    android:pivotX="30%"
                    android:pivotY="45%" >
                    <shape android:shape="rectangle" >
                        <solid android:color="#20d5d9" />
                        <size android:height="50dp" android:width="50dp" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate
                    android:fromDegrees="50"
                    android:toDegrees="45"
                    android:pivotX="0%"
                    android:pivotY="85%" >
                    <shape android:shape="rectangle" >
                        <solid android:color="#297ffF" />
                        <size android:height="80dp" android:width="80dp" />
                    </shape>
                </rotate>
            </item>
            <item>
                <rotate
                    android:fromDegrees="60"
                    android:toDegrees="120"
                    android:pivotX="95%"
                    android:pivotY="20%" >
                    <shape android:shape="rectangle" >
                        <solid android:color="#2faf3422" />
                        <size android:height="30dp" android:width="40dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</ripple>