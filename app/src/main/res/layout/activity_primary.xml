<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PrimaryActivity"
    android:background="#0FAF30"
    >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deal"
        android:id="@+id/btnDeal"
        android:onClick="newDeal"
        android:focusable="false"
        android:visibility="visible"
        android:layout_toEndOf="@+id/card1"
        android:layout_marginLeft="162dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/card1"
            android:textAlignment="center"
            android:width="110dp"
            android:visibility="invisible"
            android:background="@drawable/back"
            android:height="180dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="25dp"
            android:onClick="selectCard"
            android:layout_marginRight="3dp"
            android:clickable="true"
            android:textColor="#ffff2924" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/card2"
            android:textAlignment="center"
            android:width="110dp"
            android:visibility="invisible"
            android:background="@drawable/back"
            android:height="180dp"
            android:gravity="center"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="25dp"
            android:onClick="selectCard"
            android:clickable="true"
            android:textColor="#ffff2924" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/card3"
            android:textAlignment="center"
            android:width="110dp"
            android:visibility="invisible"
            android:background="@drawable/back"
            android:height="180dp"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:onClick="selectCard"
            android:clickable="true"
            android:textColor="#ffff2924" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/card4"
            android:textAlignment="center"
            android:width="110dp"
            android:visibility="invisible"
            android:background="@drawable/back"
            android:height="180dp"
            android:layout_marginLeft="361dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:onClick="selectCard"
            android:clickable="true"
            android:textColor="#ffff2924" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/card5"
            android:textAlignment="center"
            android:width="110dp"
            android:visibility="invisible"
            android:background="@drawable/back"
            android:height="180dp"
            android:layout_marginLeft="474dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:onClick="selectCard"
            android:clickable="true"
            android:textColor="#ffff2924" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:id="@+id/btnDisplayCards"
        android:layout_toEndOf="@+id/btnDeal"
        android:layout_marginLeft="110dp"
        android:onClick="displayHand"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnDeal"
        android:clickable="true"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop"
        android:id="@+id/btnDropCards"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:visibility="invisible"
        android:onClick="dropCard" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlayCard"
        android:layout_alignTop="@+id/btnDisplayCards"
        android:layout_alignRight="@+id/card3"
        android:layout_alignEnd="@+id/card3"
        android:onClick="playCard"
        android:visibility="invisible" />

</RelativeLayout>
